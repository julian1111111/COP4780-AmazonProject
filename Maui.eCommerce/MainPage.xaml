<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button
                Text="Inventory Management"
                Clicked="InventoryClicked"/>
            <Button
                Text="Shop"
                Clicked="ShopClicked"/>
            <Label Text="Sales tax rate"/>
            <Entry
                Text="{Binding SalesTax, Mode=TwoWay, StringFormat='{}{0:F2}'}"
                Keyboard="Numeric"
                Placeholder="0.07"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
